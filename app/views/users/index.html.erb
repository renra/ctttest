<h1>Listing team members</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <% if can? :read, user %>
      <td><%= link_to 'Show', user %></td>
    <% end %>
    <% if can? :update, user %>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <% end %>
    <% if can? :dismiss, user %>
      <td><%= link_to 'Dismiss', dismiss_user_path(user), :confirm => 'Are you sure?', :method => :post %></td>
    <% end %>
    <% if can? :destroy, user %>
      <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, User %>
  <%= link_to 'New Team Member', new_user_path %>
<% end %>
<% if can? :recruit, User %>
  | <%= link_to 'Recruit Team Members', recruit_users_path %>
<% end %>
